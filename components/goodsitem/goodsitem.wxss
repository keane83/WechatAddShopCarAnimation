/* components/goodsitem/goodsitem.wxss */
.goods-item {
  /* width: 100%; */
  width: 750rpx;
  height: 218rpx;
  border-bottom: 2rpx solid #E5E5E5;
  display: flex;
}

/* 左侧图片 */
.goods-item .goods-item-left {
  width: 200rpx;
  height: 216rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white; 
}

.goods-item .goods-item-left image {
  width: 152rpx;
  height: 152rpx;
  background-color: rgb(230, 230, 230);
}

/* 右侧内容 */
.goods-item .goods-item-right {
  background-color: white;
  width: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* 一下三行作用是：文本一行显示，多余的用...代替 */
  text-overflow: ellipsis; 
  white-space: nowrap; 
  overflow: hidden;
}

.goods-item .goods-item-right .goods-item-name {
  color: #222222;
  font-size: 32rpx;
  margin-top: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
}

.goods-item .goods-item-right .goods-item-desc {
  color: #666666;
  font-size: 24rpx;
  /* margin-top: 26rpx; */
  margin-right: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  /* 一下三行作用是：文本一行显示，多余的用...代替 */
  text-overflow: ellipsis; 
  white-space: nowrap; 
  overflow: hidden;
}

.goods-item .goods-item-right .goods-item-active {
  height: 30rpx;
  margin-top: 10rpx;
  /* background-color: yellowgreen; */
  display: flex;
}

.goods-item .goods-item-right .goods-item-active .goods-item-active-name {
  background-color: #E50012;
  color: white;
  font-size: 24rpx;
  border-radius: 5rpx;
  text-align: center;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
}

.goods-item .goods-item-right .goods-item-active .goods-item-active-detail {
  color: #E50012;
  font-size: 24rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-left: 10rpx;
}

.goods-item .goods-item-right .goods-price-count-view {
  /* height: 104rpx; */
  margin-bottom: 24rpx;
  height: 48rpx;
  display: flex;
  justify-content: space-between;
}

.goods-item .goods-item-right .goods-price-count-view .goods-price-count-view-left .goods-item-price {
  /* height: 104rpx;
  line-height: 104rpx; */
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  color: #E50012;
}

.goods-item .goods-item-right .goods-price-count-view .goods-price-count-view-left .goods-item-price-old {
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  color: #666666;
  margin-left: 10rpx;
}

.goods-item .goods-item-right .goods-price-count-view image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  align-items: center;
  /* margin-top: 28rpx; */
}