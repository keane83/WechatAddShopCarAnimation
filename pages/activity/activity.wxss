.topGoodsView {
  background-color: #f6f6f6;
  width: 100%;
  padding-bottom: 88rpx;
}

/* 倒计时模块 */
.count_down_view {
  height: 72rpx;
  width: 100%;
  background-color: #FF7969;
  display: flex;
  justify-content: space-between;
}

.count_down_view .count_down_view_left {
  font-size: 24rpx;
  color: white;
  margin-left: 48rpx;
  height: 72rpx;
  line-height: 72rpx;
}

.count_down_view .count_down_view_right {
  margin-right: 24rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.count_down_view .count_down_view_right .count_down_view_right_text {
  font-size: 24rpx;
  margin-right: 24rpx;
  color: white;
}

.count_down_view .count_down_view_right .count_down_view_right_time {
  font-size: 32rpx;
  color: #FF7969;
  background-color: white;
  margin-right: 12rpx;
  /* width: 56rpx; */
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  text-align: center;
  border-radius: 5rpx;
}

