.footer {
  width: 100%;
  height: 88rpx;
  position: fixed;
  bottom: 0;
  background-color: white;
  border-top: 2rpx solid #BDBDBD;
}

/* 购物车按钮 */
.footer .button-view{
  position: fixed;
  bottom: 0;
  left: 0;
  margin-left: 24rpx;
  margin-bottom: 24rpx;
  margin-right: 30rpx;
  z-index: 3000;
  display: flex;
  align-items:center;
  justify-content: center;
}

.shopcar-button{
  height: 90rpx;
  width: 90rpx; 
  border-radius: 50%;
  background: #000;
  opacity: 0.5;
  position: relative;
 
}

.shopcar-img{
  height: 44rpx;
  width: 44rpx; 
  position: absolute; 
}

.footer .footer-func {
  position: fixed;
  left: 140rpx;
  bottom: 0;
  height: 88rpx;
  display: flex;
  flex-direction: column;
  /* background-color: yellow; */
}

.footer .footer-func .footer-price {
  margin-top: 18rpx;
  color: #E50012;
  font-size: 26rpx;
  height: 26rpx;
  line-height: 26rpx;
}

.footer .footer-func .footer-distribution-fee {
  margin-top: 12rpx;
  color: #666666;
  font-size: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
}

.footer .footer-calculate {
  position: fixed;
  bottom: 0;
  right: 0;
  width: 184rpx;
  height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  line-height: 88rpx;
  color: white;
  background-color: #E50012;
}

.footer .footer-calculate .calculate {
  background-color: #E50012;
}

.footer .footer-calculate .calculate text {
  color: white;
  font-size: 32rpx;
}




